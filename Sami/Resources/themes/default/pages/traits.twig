{% extends page_layout %}

{% from "macros.twig" import class_link %}

{% block title %}Classes | {{ parent() }}{% endblock %}

{% block body_class 'overview' %}

{% block content_header %}
    <h1>Traits</h1>
{% endblock %}

{% block content %}
    <table>
        {% for class in classes %}
            {% if class.trait %}
            <tr>
                <td>
                    {{ class_link(class, {'target': 'main'}, true) }}
                </td>
                <td>
                    {{ class.shortdesc|desc(class) }}
                </td>
            </tr>
            {% endif %}
        {% endfor %}
    </table>
{% endblock %}
