{% extends "layout/layout.twig" %}
{% from "macros.twig" import render_classes, breadcrumbs, namespace_link, class_link, property_link, method_link, hint_link, source_link, method_source_link, deprecated, deprecations, todo, todos %}
{% block title %}All ToDo | {{ parent() }}{% endblock %}
{% block body_class 'todo' %}

{% block page_content %}
    <div class="page-header">
        <h1>ToDo</h1>
    </div>
    {% for class in classes %}
        {{ todos(class) }}
        {% if class.todo %}
            {{ class_link(class) }}<hr>
        {% endif %}
        {% for method in class.methods %}
            {{ todos(method) }}
            {% if method.todo %}
                {{ method_link(method) }}<hr>
            {% endif %}
        {% endfor %}
        {% for property in class.properties %}
            {{ todos(property) }}
            {% if property.todo %}
                {{ property_link(property) }}<hr>
            {% endif %}
        {% endfor %}
    {% endfor %}
{% endblock %}
